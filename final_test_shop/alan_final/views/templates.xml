<odoo>
  <template id="product_items_afarm">
      <div class="oe_website_sale">
         <div class="hidden" id="products_grid_before"></div>
         <div id="products_grid">
            <div class="dev_order_mobile">
               <t t-set="website_sale_order" t-value="website.sale_get_order()" />
               <nav class="dev-navbar-container dev_navbar">
                  <div style="width: 100%; padding: 12px; margin-bottom: 18px;">
                     <div style="width: 33%; float: left" class="quantity">
                        <span class="quantity_monile" style="background: red; padding: 4px;" t-if="website_sale_order and website_sale_order.cart_quantity and website_sale_order.cart_quantity &gt; 0">
                           <t t-esc="website_sale_order and website_sale_order.cart_quantity" />
                        </span> món
                     </div>
                     <div  style="width: 33%; float: left" class="title">
                        <a style="color: white !important" data-toggle="modal" data-target="#exampleModalCenter1">XEM GIỎ HÀNG</a>
                        <div class="modal fade" id="exampleModalCenter1" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                           <div class="modal-dialog modal-dialog-centered" role="document">
                              <div class="modal-content modal-mobile">
                                <t t-call="alan_final.cart_custom" />
                              </div>
                           </div>
                        </div>
                     </div>
                     <div  style="width: 33%; float: left" class="price">
                        <span style="background: red; padding: 4px;" class="my_cart_quantity_total">
                           <t t-esc="website_sale_order and website_sale_order.amount_total or 0" />
                        </span>
                     </div>
                  </div>
               </nav>
            </div>
            <div style="width:100%" id="content" role="main" class="content-area">
               <div class="menu-order">
                  <div class="devvn_order_wrap">
                     <div class="menu_container">
                        <div class="devvn_order_content devvn_clear">
                           <div class="devvn_order_main devvn_clear devvn_tab_content">
                              <div id="devvn_tab_menu_order" class="active devvn_tab_item">
                                 <div class="devvn_menu_nav">
                                    <div class="devvn_fix_scroll">
                                       <h3 class="svn_font">Thực đơn</h3>
                                       <ul class="anyClass">
                                          <t t-foreach="categories" t-as="c">
                                             <li class="devvn_cat_li">
                                                <a class="devvn_cat_select" t-att-href="keep('#%s' % c.id)">
                                                   <t t-esc="c.name" />
                                                </a>
                                             </li>
                                          </t>
                                       </ul>
                                    </div>
                                 </div>
                                 <div class="devvn_menu_cont">
                                    <div class="search_box_menuorder">
                                       <div class="search_box_menuorder_count">
                                          <span class="count_prod_menuorder">0</span>
                                       </div>
                                       <div class="input-group mb-3 search_box_menuorder_input" style="z-index: 0">
                                             <input id ="search_menu_order" style="font-size: 14px; font-weight: 700; border-radius: 5px; width: 100%; height: 50px;" type="text" name="search" class="form-control" placeholder="Nhập sản phẩm cần tìm"/>
                                       </div>
                                    </div>
                                    <t t-if="products">
                                       <t t-foreach="categories" t-as="c">
                                          <div class="devvn_section_category">
                                             <div class="scroll_title" t-att-id="c.id">
                                                <h2 class="devvn_term_title">
                                                   <t t-esc="c.name"/>
                                                </h2>
                                             </div>
                                             <div class="devvn_term_item">
                                                <t t-foreach="products" t-as="product">
                                                  
                                                   <t t-if="product.categ_id">
                                                      <t t-foreach="product.public_categ_ids" t-as="p">
                                                        <t t-if="c.id == p.id">
                                                         <div class="box-items">
                                                            <div class="devvn_entry_main parents_item">
                                                               <div class="devvn_prd_list_option" data-price-text="78.000" data-prdid="113" data-prdtitle="Combo 78k: Bò Kho tô lớn (nạm bò + gân bò) + Sâm lạnh + Khăn" data-prdthumb="https://order.bokhocomai.com/wp-content/uploads/2019/08/Combo-68k.jpg" data-prdprice="78000">
                                                                  <div class="devvn_entry_thumb">
                                                                     <a t-att-href="keep('/shop/product/%s' % slug(product), page=(None))" class="preview-image">
                                                                        <img width="100" height="100" t-att-src="website.image_url(product,'image_128')" class="attachment-thumbnail size-thumbnail wp-post-image" alt="" />
                                                                     </a>
                                                                  </div>
                                                                  <div class="devvn_entry_cont">
                                                                     <div class="devvn_menuorder_title_price">
                                                                        <h3>
                                                                           <lable class="devvn_product_name"><a style="color: black;" t-att-href="keep('/shop/product/%s' % slug(product), page=(None))"><t t-esc="product.name"/></a></lable>
                                                                           <span style="background-color:#ffc107">Món dùng nhiều nhất</span>
                                                                        </h3>
                                                                     </div>
                                                                     <div class="desc_menuorder">
                                                                        <p><t t-esc="product.description_sale"/></p>
                                                                     </div>
                                                                     <div class="devvn_menuorder_price">
                                                                     <t t-set="combination_info" t-value="product._get_combination_info(only_template=True, add_qty=add_qty or 1, pricelist=pricelist)"/>
                                                                        <span class="devvn_price">+
                                                                            <b>
                                                                              <t t-if="True">
                                                                                  <del t-attf-class="text-danger mr8 {{'' if combination_info['has_discounted_price'] else 'd-none'}}" style="white-space: nowrap;" t-esc="combination_info['list_price']" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                                                                              </t>
                                                                              <span t-if="combination_info['price']" t-esc="combination_info['price']" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                                                                              <span itemprop="price" style="display:none;" t-esc="combination_info['price']"/>
                                                                              <span itemprop="priceCurrency" style="display:none;" t-esc="website.currency_id.name"/>
                                                                          </b>
                                                                        </span>
                                                                        <a class="popup_detail" data-toggle="modal" data-target="#exampleModalCenter">
                                                                           <span class="devvn_plus">+</span>
                                                                        </a>
                                                                        <a class="tch-text-bold uk-button uk-button-primary uk-width-1-1 uk-padding-remove-left uk-padding-remove-right" style="color: white !important; display: none;" data-toggle="modal" data-target="#myModal1">XEM GIỎ HÀNG</a>
                                                                        <div class="modal fade" id="myModal1">
                                                                           <div class="modal-dialog">
                                                                              <div class="modal-content">
                                                                                 -..dang load
                                                                              </div>
                                                                           </div>
                                                                        </div>
                                                                     </div>
                                                                     <div class="hidden">
                                                                        <span>Đã được đặt 
                                                                           <b>5</b> lần
                                                                        </span>
                                                                     </div>
                                                                  </div>
                                                               </div>
                                                            </div>
                                                            <input class="product_id" type="hidden" t-att-value="product.id" />
                                                         </div>
                                                      </t>
                                                   </t>
                                                   </t>
                                                
                                                </t>
                                             </div>
                                          </div>            
                                       </t>
                                    </t>
                                 </div>
                              </div>
                           </div>
                           <div class="devvn_order_sidebar">
                              <div id="remove_cart_desktop" class="devvn_fix_scroll">
                                 <div class="devvn_sidebar_main devvn_sidebar_main_load" id="devvn_sidebar_onload">
                                    <t t-call="alan_final.cart_custom"/>
                                 </div>
                                 <div class="devvn_sidebar_ft no_checkout">
                                    <t t-call="alan_final.total_delivery"/>
                                 </div>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
                  <div class="devvn_option_list_option" style="display: none;">
                     <div class="devvn_entry_item devvn_request">
                        <h4>Mang đi
                           <span>(Bắt buộc chọn 1 loại)</span>
                        </h4>
                        <div class="devvn_entry_list devvn_clear">
                           <div class="devvn_item">
                              <div class="devvn_left">
                                 <div class="devvn_option_name">
                                    <input type="checkbox" option_name="Mang đi" price="6000" option_id="11" title="Hộp, muỗng, đũa, bịch" class="devvn_check_valid devvn_checked"/>
                                    <label class="devvn_binding">Hộp, muỗng, đũa, bịch</label>
                                 </div>
                              </div>
                              <div class="devvn_right devvn_option_price">
                                 +6.000 đ                                            
                              </div>
                              <div class="devvn_boxvalid" style="display: none;">
                                 <span class="devvn_btn_minus devvn_ajax_btn_minus">-</span>
                                 <input type="text" class="devvn_ajax_valid_input" readonly="readonly" value="1"/>
                                 <span class="devvn_btn_plus devvn_ajax_btn_plus">+</span>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
